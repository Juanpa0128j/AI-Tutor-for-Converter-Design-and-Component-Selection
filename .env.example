# API Keys for Component Catalogs

# DigiKey OAuth2 credentials
DIGIKEY_CLIENT_ID=your_digikey_client_id_here
DIGIKEY_CLIENT_SECRET=your_digikey_client_secret_here
DIGIKEY_USE_SANDBOX=true  # Set to 'false' for production API
DIGIKEY_REFRESH_TOKEN=  # Required for Sandbox (run examples/digikey_oauth_authorize.py)

# Mouser API key
MOUSER_API_KEY=your_mouser_api_key_here # This one is what we are using

# LCSC API key
LCSC_API_KEY=your_lcsc_api_key_here

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=86400  # 24 hours in seconds

# Rate Limiting Configuration
CATALOG_RATE_LIMIT_REQUESTS=100
CATALOG_RATE_LIMIT_PERIOD=60  # seconds

# Component Recommendation Settings (user-configurable weights)
DEFAULT_WEIGHT_COST=0.30
DEFAULT_WEIGHT_AVAILABILITY=0.25
DEFAULT_WEIGHT_EFFICIENCY=0.25
DEFAULT_WEIGHT_THERMAL=0.20
