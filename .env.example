# API Keys for Component Catalogs
MOUSER_API_KEY=your_mouser_api_key_here # This one is what we are using

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=86400  # 24 hours in seconds

# Rate Limiting Configuration
CATALOG_RATE_LIMIT_REQUESTS=100
CATALOG_RATE_LIMIT_PERIOD=60  # seconds

# Component Recommendation Settings (user-configurable weights)
DEFAULT_WEIGHT_COST=0.30
DEFAULT_WEIGHT_AVAILABILITY=0.25
DEFAULT_WEIGHT_EFFICIENCY=0.25
DEFAULT_WEIGHT_THERMAL=0.20

# Development/Debug Settings
DEBUG=           # Set to '1' to enable DEBUG level logging (default: INFO)
LOG_TO_FILE=     # Set to '1' to write logs to component_search.log
SKIP_VALIDATION= # Set to '1' to bypass component requirements validation (testing only)

# RAG / Document Processing Configuration
UNSTRUCTURED_API_KEY=      # Get from https://platform.unstructured.io
PINECONE_API_KEY=          # Get from https://app.pinecone.io
PINECONE_INDEX_NAME=tutor-rag-index
PINECONE_CLOUD=aws         # or 'gcp', 'azure'
PINECONE_REGION=us-east-1  # Free tier region
